<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

/* Container for the content */
.container {
    width: 80%;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

/* Form styling */
h2 {
    color: #333;
    font-size: 1.8em;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 15px;
}

label {
    display: block;
    font-size: 1.1em;
    color: #333;
}

input, textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1em;
}

textarea {
    height: 150px;
}

.submit-btn {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1.1em;
}

.submit-btn:hover {
    background-color: #45a049;
}

/* Post List styling */
.posts {
    margin-top: 40px;
}

.post {
    padding: 20px;
    margin-bottom: 20px;
    background-color: #fafafa;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.post h3 {
    margin-top: 0;
    color: #333;
}

.post small {
    display: block;
    margin-top: 10px;
    color: #666;
    font-size: 0.9em;
}

    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="container">
        <!-- Form for creating a new post -->
        <h2>Create a New Post</h2>
        <form action="/addPost" method="POST" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" maxlength="255" required>
            </div>
        
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea id="content" name="content" maxlength="5000" required></textarea>
            </div>
        
            <button type="submit" class="submit-btn">Submit</button>
        </form>
        

        <!-- Displaying the posts -->
        <h2>Posts</h2>
        <div class="posts">
            <% posts.forEach(post => { %>
                <div class="post">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <small>Posted on: <%= post.created_at %></small>
                </div>
            <% }) %>
        </div>
    </div>
    <script>
        function validateForm() {
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
    
            if (title.length === 0 || content.length === 0) {
                alert('Both title and content are required.');
                return false;
            }
    
            if (title.length > 255) {
                alert('Title is too long. Max 255 characters.');
                return false;
            }
    
            if (content.length > 5000) {
                alert('Content is too long. Max 5000 characters.');
                return false;
            }
    
            return true;
        }
    </script>

</body>
</html>
