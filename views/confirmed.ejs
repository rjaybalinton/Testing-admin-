<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmed Student Applications</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* General Body Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fc;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Header Styling */
        header {
            background-color: #4CAF50;
            color: white;
            padding: 15px;
            text-align: center;
        }

        /* Heading Styling */
        h1 {
            text-align: center;
            color: #4CAF50;
            margin-top: 20px;
            font-size: 2.5em;
        }

        /* Table Styling */
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Responsive Table */
        @media screen and (max-width: 768px) {
            table {
                width: 100%;
                font-size: 0.9em;
            }

            th, td {
                padding: 8px;
            }
        }

        /* Small Export Button Styling */
        .export-button {
            position: relative;
            margin: 15px 0 0 15px;
            padding: 5px 10px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            text-decoration: none;
            font-size: 0.9em;
            border-radius: 3px;
            cursor: pointer;
            border: none;
            display: inline-block;
        }

        .export-button:hover {
            background-color: #45a049;
        }

        /* Wrapper for export button */
        .export-container {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <!-- Export Button -->
    <div class="export-container">
        <a href="/export/confirmed-students" class="export-button">Export to Excel</a>
    </div>

    <!-- Page Title -->
    <h1>Confirmed Students</h1>

    <!-- Student Table -->
    <table>
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Degree Program</th>
                <th>Year Level</th>
                <th>Gmail</th>
                <th>Phone Number</th>
                <th>Updated At</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.student_id %></td>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.degree_program %></td>
                    <td><%= student.year_level %></td>
                    <td><%= student.gmail %></td>
                    <td><%= student.phone_number %></td>
                    <td><%= student.updated_at %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
